#!/usr/bin/env perl

use strict;
use warnings;
use lib 'lib';
use PearlDB::Parser;
use PearlDB::Executor;

print "Welcome to PearlDB CLI. Type SQL commands. Type EXIT to quit.\n";

while (1) {
    print "PearlDB> ";
    my $input = <STDIN>;
    chomp $input;
    next unless $input;

    my $cmd = PearlDB::Parser::parse($input);
    PearlDB::Executor::execute($cmd);
}
